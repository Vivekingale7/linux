#include<stdio.h>
        void main(){

                int rows;
                printf("Enter the rows:");
                scanf("%d",&rows);

                char x='D';
                char y='e';

                for(int i=1;i<=rows;i++){

                        for(int j=1;j<=rows;j++){

                        if(i%2==0){
                                if(i+j%2==0){
					printf("%c",x);
					x++;
				}else{
					printf("%c",y);
					y=y+2;
				}
                               
                                
                        }
                        else if(i%2==1){
                                if(i+j%2==0){
					printf("%c",y);
				}else{
					printf("%c",x);
				}
                        
                        }
                        x=x-1;
                        y=y-2;
                        printf("\n");
                }
        }
~      } 
